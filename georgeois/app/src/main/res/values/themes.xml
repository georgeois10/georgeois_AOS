<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Georgeois" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorError">@color/accentRed</item>
        <item name="android:statusBarColor">@color/accentGray</item>
        <!-- 툴바 테마 스타일 설정 -->
        <item name="toolbarStyle">@style/Theme.Georgeois.Toolbar</item>
    </style>

    <style name="Theme.Georgeois.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/space</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:gravity">center</item>
        <item name="titleCentered">true</item>
    </style>

    <!--바텀 네비게이션 item text-->
    <style name="Theme.Georgeois.BottomNavigation">
        <item name="android:fontFamily">@font/space</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme.Georgeois.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/space</item>
    </style>
    <style name="Theme.Georgeois" parent="Base.Theme.Georgeois" />
</resources>