<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true"
    tools:context=".ui.user.LoginResetPasswordFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar_loginResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.Georgeois.Toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_15dp">

        <TextView
            android:id="@+id/textView_loginResetPassword_pw"
            style="@style/Theme.Georgeois.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:text="비밀번호 재설정"
            android:textSize="@dimen/font_size_18sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_loginResetPassword_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            app:endIconMode="password_toggle"
            app:helperTextTextColor="@color/accentGreen">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_loginResetPassword_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space"
                android:hint="비밀번호"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView_loginResetPassword_confirmPw"
            style="@style/Theme.Georgeois.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:text="비밀번호 확인"
            android:textSize="@dimen/font_size_18sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_loginResetPassword_confirmPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperTextTextColor="@color/accentGreen">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_loginResetPassword_confirmPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space"
                android:hint="비밀번호 확인"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_loginResetPassword_setNewPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:fontFamily="@font/space"
            android:text="변경하기"
            android:textSize="@dimen/font_size_16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>