<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true"
    tools:context=".ui.myInfo.ModifyPasswordFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.Georgeois.Toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_size_15dp">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space"
                android:text="휴대폰 번호"
                android:textSize="@dimen/font_size_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_modify_password_input_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEdixText_modify_password_input_phone_number"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_chat_main_recyclerview"
                        android:fontFamily="@font/space"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button_modify_password_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="0dp"
                    android:fontFamily="@font/space"
                    android:text="본인인증"
                    android:textSize="@dimen/font_size_16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/padding_size_15dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_help_24px"
                android:fontFamily="@font/space"
                android:gravity="center"
                android:text="  - 를 제외하고 입력해주세요."
                android:textColor="@color/accentRed"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space"
                android:text="인증 번호"
                android:textSize="@dimen/font_size_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_size_15dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_modify_password_input_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_modify_password_input_code"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_chat_main_recyclerview"
                        android:fontFamily="@font/space" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button_modify_password_check_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="0dp"
                    android:fontFamily="@font/space"
                    android:text="인증확인"
                    android:textSize="@dimen/font_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space"
                android:text="새로운 비밀번호"
                android:textSize="@dimen/font_size_18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_modify_password_input_new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText_modify_password_input_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_chat_main_recyclerview"
                    android:fontFamily="@font/space"
                    android:inputType="text|textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/padding_size_15dp"
                android:drawableStart="@drawable/ic_help_24px"
                android:fontFamily="@font/space"
                android:gravity="center_vertical"
                android:text="  8~16자 사이로 특수문자를 사용하여 입력해주세요."
                android:textColor="@color/accentRed"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/space"
                android:text="비밀번호 확인"
                android:textSize="@dimen/font_size_18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_modify_password_input_new_password_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText_modify_password_input_new_password_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_chat_main_recyclerview"
                    android:fontFamily="@font/space"
                    android:inputType="text|textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_modify_password_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/padding_size_15dp"
                android:layout_marginRight="0dp"
                android:fontFamily="@font/space"
                android:text="저장"
                android:textSize="@dimen/font_size_16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>