<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_chat_main_recyclerview"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView_row_chat_account_book_user_list_user_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/padding_size_15dp"
        android:layout_marginTop="@dimen/padding_size_15dp"
        android:layout_marginBottom="@dimen/padding_size_15dp"
        app:srcCompat="@drawable/ic_person_24px" />

    <TextView
        android:id="@+id/textView_row_chat_account_book_user_list_user_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:fontFamily="@font/space"
        android:text="TextView"
        android:textSize="@dimen/font_size_16sp" />

    <TextView
        android:id="@+id/textView_row_chat_account_book_user_list_user_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/space"
        android:gravity="right"
        android:text="TextView"
        android:textSize="@dimen/font_size_16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_15dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chevron_right_24px" />
    </LinearLayout>
</LinearLayout>