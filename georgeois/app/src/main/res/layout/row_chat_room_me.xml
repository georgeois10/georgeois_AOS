<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_size_15dp"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_row_chat_room_me_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:text="2023-09-16 / 11:36"
            android:textColor="@color/lightGray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textView_row_chat_room_me_my_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_my_info_main"
            android:maxLength="300"
            android:padding="10dp"
            android:text="안녕하세요" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_row_chat_room_me_opponent_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_24px"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/textView_row_chat_room_me_opponent_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="채팅방 닉네임"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold" />

    </LinearLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_row_chat_room_me_opponent_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_my_info_main"
            android:maxLength="300"
            android:padding="10dp"
            android:text="안녕하세요" />

        <TextView
            android:id="@+id/textView_row_chat_room_me_opponent_chat_moment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:text="2023-09-16 / 11:36"
            android:textColor="@color/lightGray"
            android:textSize="11sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/textView_row_chat_room_me_out_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/padding_size_15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border_chat_main_recyclerview"
        android:gravity="center"
        android:padding="10dp"
        android:text="OOO님이 채팅방을 나갔습니다." />


</LinearLayout>