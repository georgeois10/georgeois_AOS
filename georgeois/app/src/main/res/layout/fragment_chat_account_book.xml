<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.chat.ChatAccountBookFragment" >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_chat_account_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.Georgeois.Toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_size_15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/border_chat_main_recyclerview"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/space"
                        android:gravity="center"
                        android:text="절약왕"
                        android:textSize="@dimen/font_size_18sp" />

                    <ImageView
                        android:id="@+id/imageView_crown1"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:src="@drawable/img_crown" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView_chat_account_book_saving_user_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_24px"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/textView_chat_account_book_saving_user_nickName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/space"
                        android:gravity="center"
                        android:text="유저0"
                        android:textSize="@dimen/font_size_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_chat_main_recyclerview"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_size_15dp">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/space"
                        android:gravity="center"
                        android:text="소비왕"
                        android:textSize="@dimen/font_size_18sp" />

                    <ImageView
                        android:id="@+id/imageView_crown2"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:src="@drawable/img_crown" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView_chat_account_book_comsumption_user_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_24px"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/textView_chat_account_book_consumption_user_nickName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/space"
                        android:gravity="center"
                        android:text="유저4"
                        android:textSize="@dimen/font_size_16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_size_15dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/space"
                    android:text="총 지출"
                    android:textSize="@dimen/font_size_18sp" />

                <TextView
                    android:id="@+id/textView_chat_account_book_total_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/space"
                    android:gravity="right"
                    android:text="TextView"
                    android:textSize="@dimen/font_size_16sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_size_15dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/space"
                    android:text="평균 지출"
                    android:textSize="@dimen/font_size_18sp" />

                <TextView
                    android:id="@+id/textView_chat_account_book_average_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/space"
                    android:gravity="right"
                    android:text="TextView"
                    android:textSize="@dimen/font_size_16sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_size_15dp"
                    android:fontFamily="@font/space"
                    android:text="개인 지출"
                    android:textSize="@dimen/font_size_18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_chat_account_book"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionGroup="true" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>