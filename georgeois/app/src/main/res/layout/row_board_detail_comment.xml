<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_boardDetailComment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.Georgeois.Text"
                android:textSize="@dimen/font_size_16sp"
                android:text="유저닉네임" />

            <TextView
                android:id="@+id/textView_boardDetailComment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                style="@style/Theme.Georgeois.Text"
                android:textSize="@dimen/font_size_16sp"
                android:text="날짜" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_boardDetailComment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_4dp"
            style="@style/Theme.Georgeois.Text"
            android:textSize="@dimen/font_size_18sp"
            android:text="댓글 내용" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/accentGray" />


    </LinearLayout>


</LinearLayout>